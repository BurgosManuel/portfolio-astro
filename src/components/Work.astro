---
import workData from '../data/work.json';
import WorkEntry from './WorkEntry.astro';
---

<main class="mx-auto max-w-screen-sm p-5">
    <h1 class="text-xl font-semibold">Work Experience</h1>
    <div class="divider"></div>

    { workData.map((job) => (
        <WorkEntry
            company={job.company}
            date={job.date}
            position={job.position}
            tasks={job.tasks}
        />
    ))}
</main>