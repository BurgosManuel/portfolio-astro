---
interface Props extends Education {};

const { institution, period, degree, description }: Props = Astro.props;
---
<article>
        <header class="flex flex-col items-left gap-3 justify-between flex-wrap sm:flex-row sm:items-center">
            <aside>
                <h3 class="font-semibold">{institution}</h3>
                <p class="text-sm font-light">{degree}</p>
            </aside>
            <p class="text-sm">{period}</p>
        </header>
        <ul class="mt-3 list-disc pl-5">
            {description.map((desc) => (
                <li class="py-2">{desc}</li>
            ))}
        </ul>
</article>
