---
interface Props extends Work {}

const { company, period, position, tasks }: Props = Astro.props;
---
<article>
        <header class="flex items-center justify-between flex-wrap">
            <h3 class="font-semibold">{company}</h3>
            <span class="text-sm">{period}</span>
        </header>
        <p class="text-sm font-light">{position}</p>
        <ul class="mt-3 list-disc pl-5">
            {tasks.map((task) => (
                <li class="py-2">{task}</li>
            ))}
        </ul>
</article>