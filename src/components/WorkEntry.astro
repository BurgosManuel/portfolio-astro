---
import { Icon } from 'astro-icon/components';

interface Props extends Work {}

const { company, companySite, period, position, tasks }: Props = Astro.props;
---
<article>
        <header class="flex flex-col items-left gap-3 justify-between flex-wrap sm:flex-row sm:items-center">
            <aside>
                <a href={companySite} target="_blank">
                    <h3 class="font-semibold inline">{company}</h3>
                    <Icon name="external-link" class="inline"/>
                </a>
                <p class="text-sm font-light">{position}</p>
            </aside>
            <p class="text-sm">{period}</p>
        </header>
        <ul class="mt-3 list-disc pl-5">
            {tasks.map((task) => (
                <li class="py-2">{task}</li>
            ))}
        </ul>
</article>